<div id="<%= dom_id category %>">
  <p class="mt-3">
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p class="mt-3">
    <h2><%= category.name %></h2>
    <%= image_tag(category.icon) if category.icon.attached? %>
  </p>

  <p class="mt-3">
    <strong>Created at:</strong>
    <%= category.created_at %>
  </p>

  <p class="mt-3">
    <strong>User:</strong>
    <%= category.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this category", user_category_path(category.user, category), class: "btn btn-light" %>
    <%= link_to "Edit this category", edit_user_category_path(category.user, category), class: "btn btn-light ml-2" %>
    <hr class="mt-4">
  <% end %>
</div>