<div class="mx-auto w-100 d-flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="alert alert-success mb-3" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="font-weight-bold display-4"><%= @category.name %></h1>
    <p><%= @category.created_at.strftime("%Y-%m-%d %H:%M:%S") %></p>
    <% if @category.expenses.any? %>
      <% @category.expenses.each do |expense| %>
        <p>
          <%= expense.name %>: <%= expense.amount %>
        </p>
      <% end %>
    <% else %>
      <p>No expenses for this category</p>
    <% end %>

    <%= link_to "Edit this category", edit_user_category_path(@category.user, @category), class: "mt-2 btn btn-light" %>
    <div class="d-inline-block ml-2">
      <%= button_to "Destroy this category", user_category_path(@category.user, @category), method: :delete, class: "mt-2 btn btn-light" %>
    </div>
    <%= link_to "Back to categories", user_categories_path(@category.user), class: "ml-2 btn btn-light" %>
  </div>
</div>