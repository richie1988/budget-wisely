<!-- app/views/expenses/show.html.erb -->
<div class="mx-auto w-100 d-flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="alert alert-success mb-3" id="notice"><%= notice %></p>
    <% end %>

    <%= render @expense %>

    <%= link_to "Edit this expense", edit_expense_path(@expense), class: "mt-2 btn btn-light" %>
    <div class="d-inline-block ml-2">
      <%= button_to "Destroy this expense", expense_path(@expense), method: :delete, class: "mt-2 btn btn-light" %>
    </div>
    <%= link_to "Back to expenses", expenses_path, class: "ml-2 btn btn-light" %>
  </div>
</div>