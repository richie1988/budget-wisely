{
    "extends": ["stylelint-config-standard"],
    "plugins": ["stylelint-scss", "stylelint-csstree-validator"],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "csstree/validator": true
    },
    "ignoreFiles": [
      "build/**", 
      "dist/**", 
      "**/reset*.css", 
      "**/bootstrap*.css", 
      "bin/**/*", 
      "assets/**/*", 
      "vendor/**/*",
      "node_modules/**/*",
      "public/**/*",
      "storage/**/*",
      "resources/**/*",
      "tests/**/*",
      "webpack.mix.js",
      "webpack.config.js",
      "webpack.config.*.js"
      ]
  }